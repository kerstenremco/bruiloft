<section class="resume-section p-3 p-lg-5 d-flex align-items-center" id="about">
    <div class="w-100">
      <h1 class="mb-0 text-center">Hallo
        <span class="text-primary text-center">{{ naam }}</span>
      </h1>
      <div class="subheading mb-5 text-center">Nodig iemand uit voor jullie wishlist!</div>
      <p class="lead mb-5 text-center">De persoon ontvangt dan een mail met een uitnodigingslink.</p>
      <p class="lead mb-5 text-center">Jullie persoonlijke uitnodigingscode is: <b>{{ invitecode }}</b></p>
    </div>
  </section>

  <section class="resume-section p-3 p-lg-5 d-flex justify-content-center" id="experience">
    <div class="sign-up-content">
        <form method="POST" id="weddingForm" class="signup-form">
            <h2 class="form-title">Wie wil je uitnodigen?</h2>

            <div class="form-textbox">
                <label for="email">E-mailadres</label>
                <input type="email" name="email" id="email" />
            </div>

            <div class="form-textbox">
                <input type="submit" name="submit" id="regWeddingButton" class="submit" value="Nodig uit" />
            </div>
        </form>
    </div>
  </section>

